<h2>Product List</h2>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to '新增商品', new_admin_product_path, class: "btn btn-primary btn-sm" %>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>品名</th>
      <th>叙述</th>
      <th>库存</th>
      <th>价格</th>
      <th>选项</th>
      <th>创建日期</th>
    </tr>
  </thead>

  <body>

    <% @products.each do |product| %>
    <tr>
      <td><%= product.id %></td>
      <td><%= link_to product.title, admin_product_path(product) %></td>
      <td><%= simple_format(product.description) %></td>
      <td><%= product.quantity %></td>
      <td><%= product.price %></td>
      <td><%= link_to 'Edit', edit_admin_product_path(product) %>|<%= link_to 'Delete', admin_product_path(product), method: :delete, data: { confirm: "Are you sure?"} %></td>
      <td><%= product.created_at %></td>
    </tr>

    <% end %>
  </body>
</table>

<h2>订单列表
</h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>商品名称</th>
      <th>购买数量</th>
      <th>购买价格</th>
      <th>生成时间</th>
    </tr>
  </thead>
  <tbody>

    <% @orders.each do |order| %>
    <tr>
      <td>
        <%= link_to(order.id, order_path(order.token)) %>
      </td>

      <% order.product_lists.each do |product_list| %>
      <td>
        <%= product_list.product_name %>
      </td>
      <td>
        <%= product_list.quantity %>
      </td>
      <td>
        <%= product_list.product_price %>
      </td>
      <% end %>
      <td>
        <%= order.created_at.to_s(:long) %>
      </td>
    </tr>
    <% end %>

  </tbody>
</table>
